@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">N: @n</p>
<p role="status">fibonacci(n): @fibN</p>

<button class="btn btn-primary" @onclick="Increment">Click me</button>

@code {
    private int n = 1;
    private int fibNminus1 = 0;
    private int fibN = 1;

    private void Increment()
    {
        // compute next state
        int fibNplus1 = fibN + fibNminus1;

        // advance to next state
        n++;
        fibNminus1 = fibN;
        fibN = fibNplus1;

    }
}
